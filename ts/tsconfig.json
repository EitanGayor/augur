{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": false,
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}