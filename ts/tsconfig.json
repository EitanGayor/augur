{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "moduleResolution": "node",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "esnext"
      ]
    },
    "include": [
      "src/**/*.ts",
      "tests/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
}